{
    "manifest_version" : 2,

    "name" : "McMyAdmin Helper",
    "description" : "Adds additional functionality to the McMyAdmin console page.",
    "version" : "0.1",
    "icons" : {
        "16"  : "icon16.png",
        "48"  : "icon48.png",
        "128" : "icon128.png"
    },
    "options_page" : "options.html",

    "permissions": [
        "tabs",
        "storage",
        "http://*/",
        "https://*/"
    ],

    "background" : {
        "scripts" : ["background.js"],
        "persistent" : false
    }
}